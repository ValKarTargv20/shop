@model IEnumerable<shop.Models.Car.CarListViewModel>

@{
    int quenenumber = 0;
}

<div>
    <a asp-action="add" asp-controller="car" type="submit" class="btn btn-light">Add</a>
</div>

<form method="post">
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Nr</th>
                <th scope="col">Brand</th>
                <th scope="col">Mark</th>
                <th scope="col">Engine</th>
                <th scope="col">Price</th>
                <th scope="col">Amount</th>
                <th scope="col">ProdusedAt</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var car in Model)
            {
                quenenumber++;
                <tr>
                    <td class="">@quenenumber</td>
                    <td class="">@car.Brand</td>
                    <td class="">@car.Mark</td>
                    <td class="">@car.Engine</td>
                    <td class="">@car.Price</td>
                    <td class="">@car.Amount</td>
                    <td class="">@car.ProdusedAt</td>
                    <td>
                        <a asp-action="edit" asp-controller="car" asp-route-id="@car.Id" class="btn btn-primary">Edit</a>
                        <input asp-action="delete" asp-controller="car" asp-route-id="@car.Id" type="submit" class="btn btn-danger" value="Delete">
                    </td>
                </tr>
            }
        </tbody>
    </table>
</form>
