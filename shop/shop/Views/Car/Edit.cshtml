@model shop.Models.Car.CarViewModel

@if (Model.Id.HasValue)
{
    <h1>Update</h1>
}
else
{
    <h1>Add</h1>
}

<div>
    <form method="post" enctype="multipart/form-data">
        <input asp-for="Id" type="hidden" />
        <input asp-for="CreatedAt" type="hidden" />
        <input asp-for="ModifedAt" type="hidden" />

        <div class="form-group row">
            <label asp-for="Brand" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Brand" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Mark" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <textarea asp-for="Mark" class="form-control" rows="5"></textarea>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Engine" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <textarea asp-for="Engine" class="form-control" rows="5"></textarea>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Price" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Price" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Amount" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Amount" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="ProdusedAt" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="ProdusedAt" class="form-control" />
            </div>
        </div>
        @if (Model.Id.HasValue)
        {
            <input asp-action="update" asp-controller="car" type="submit" class="btn btn-primary" value="Update">
            <input asp-action="delete" asp-controller="car" asp-for="Id" type="submit" class="btn btn-danger" value="Delete">
        }
        else
        {
            <input asp-action="add" asp-controller="car" type="submit" class="btn btn-primary" value="Add">
        }
        <a asp-action="index" class="btn btn-primary">Back</a>
    </form>
</div>
